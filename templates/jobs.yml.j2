{% for t in trees %}
- project:
    name: '{{ t.name }}'
    is_disabled: {{ t.disable }}
    url: '{{ t.url }}'
    subpath: '{{ t.subpath }}'
    scm: '{{ t.scm }}'
    schedule: '{{ t.schedule }}'
    quiet_period: {{ t.quiet_period }}
    docker_img: '{{ t.docker_img }}'
    docker_vol: '{{ t.docker_vol }}'
    mail_rcpts: {{ t.mail_rcpts }}
    job_weight: {{ t.job_weight }}
{%- if t.mozconfig %}
    mozconfig: '{% for m in t.mozconfig %}{{ m }}\n{% endfor %}'
{%- endif -%}
{%+ if t.cross_tree %}
    jobs:
        - '{name}_tree'
{%- else %}
    jobs:
        - '{name}_index'
{%- endif %}

{% endfor %}
